<header>
  <ul id="dropdown-account" class="dropdown-content blue darken-4 white">
    <span class="account-head">Account</span>
    <div class="dropdown-family">
      <li><%= link_to "Create Account", new_student_path, class: "white-text" %></li>
      <li>
        <% if current_student %> 
            <%= link_to "Log Out", login_path, method: :delete, class: "white-text" %>
        <% else %>
              <%= link_to "Log in", login_path, class: "white-text" %>
        <% end %>
      </li>
    </div>
  </ul>

  <!-- STUDENTS -->
  <% if logged_in? && current_student.admin? %>
    <ul id="dropdown-students" class="dropdown-content blue darken-4 white">
    <div class="dropdown-family">
    <li><%= link_to "All Students", students_path, class: "white-text" %></li>
      <li><%= link_to "Add Student", new_student_path, class: "white-text" %></li>
    </div>
  </ul>
  <% end %>

  <!-- Courses -->
  <ul id="dropdown-courses" class="dropdown-content blue darken-4 white">
    <div class="dropdown-family">
    <li><%= link_to "All Courses", courses_path, class: "white-text" %></li>
    <% if logged_in? && current_student.admin? %>
      <li><%= link_to "Create Course", new_course_path, class: "white-text" %></li>
    <% end %>
    </div>
  </ul>

  <nav>
    <div class="nav-wrapper blue darken-4">
      <div class="container">
        <%= link_to "Imperial University", root_path, class: "brand-logo"%>
        
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
         <% if current_student %>
            <li><%= link_to current_student.name, student_path(current_student) %><%= "(Admin)" if current_student.admin? %></li>
            <li><%= link_to "Enrollments", "#" %></li>
          <% end %>
          
          <!-- DROPDOWN -->
          
          <% if logged_in? && current_student.admin? %>
            <li><a class="dropdown-trigger" href="#!" data-target="dropdown-students">Students<i class="material-icons right">arrow_drop_down</i></a></li>
          <% end %>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown-courses">Courses<i class="material-icons right">arrow_drop_down</i></a></li>
          <li><a class="dropdown-trigger" href="#!" data-target="dropdown-account">Account<i class="material-icons right">arrow_drop_down</i></a></li>
          
        </ul>
      </div>
    </div>
  

  <ul class="sidenav white blue darken-4" id="mobile-demo">
    <li><%= link_to "Courses", courses_path %></li>
    <li><%= link_to "Enrollments", "#" %></li>
    <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">Account<i class="material-icons right">arrow_drop_down</i></a></li>
  </ul>
 
  </nav>
</header>