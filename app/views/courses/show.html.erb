
<div class="container">
    <div class="section">
      <div class="row">
        <div class="col s12 m12 ">
          <div class="card blue darken-4 ">
            <div class="card-content white-text">
              <span class="card-title"><h3>Code: <%= @course.short_name %></h3></span>
              <h4><%= @course.name %></h4>
              <p><%= @course.description %></p>
            </div>
          </div>
            <div class="card-action">
              <% if logged_in? && current_student.admin? %>
                <%= link_to "Edit", edit_course_path, class: "btn light-blue darken-4  waves-effect waves-light" %>
                <%= link_to "Delete Course", course_path, method: :delete, class: "btn red darken-4  waves-effect waves-light" %>
              <% end %>
              <%= link_to "View All Courses", courses_path, class: "waves-effect waves-light btn orange darken-3" %>
            </div>
        </div>
      </div>
    </div>
  </div>
