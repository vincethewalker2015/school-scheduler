<div class="row">
  <div class="col s12">
    <h3 class="center-align">Courses</h3>
  </div>
</div>

<% if current_student %>
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col s4 m4 ">
        <div class="card green darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= course.short_name %></span>
            <p><%= course.name %></p>
            <p><%= course.description %></p>
          </div>
          <div class="card-action">
            <%= link_to "View Course", course_path(course) %>
            <%= link_to "Delete", course_path(course), method: :delete, data: {confirm: "Are You Sure?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row">
    <div class="card blue darken-4 ">
      <div class="card-content white-text center">
        <h1>Welcome to Imperial University</h1>
        <h4>Create an Account or Login to Continue</h4>
      </div>
    </div>
  </div>
<% end %>




