<div class="container">
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
       
        <div class="row">
          <%= form_for(@student, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="input-field">
          <div class="col s6">
            <%= f.label :name %>
          </div>
          <div class="input-field">
            <%= f.text_field :name, class: 'validate black-text', type: 'text', placeholder: "Enter your name" %>
          </div>
          </div>
          <div class="input-field">
            <div class="col s6">
              <%= f.label :email %>
            </div>
            <div class="col-md-8">
              <%= f.email_field :email, class: 'validate black-text', placeholder: "Enter your e-mail address" %>
            </div>
          </div>
          <div class="input-field">
            <div class="col s6">
              <%= f.label :password %>
            </div>
            <div class="col-md-8">
            <%= f.password_field :password, class: 'validate black-text', placeholder: "Create a Password..." %>
            </div>
          </div>
          <div class="input-field">
            <div class="col s6">
              <%= f.label :password_confirmation %>
            </div>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, class: 'validate black-text', placeholder: "Please re-enter your password.." %>
            </div>
          </div>
          <div class="input-field col s12">
            <div>
              <%= f.submit class: "btn light-blue darken-4  waves-effect waves-light" %>
              <%= link_to "Back to Home Page", root_path, class: "waves-effect waves-light btn orange darken-3" %>
          </div>
        </div>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>